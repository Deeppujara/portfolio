<script>
document.addEventListener('DOMContentLoaded', () => {

    // ===================================================================
    // --- CHATBOT SCRIPT ---
    // ===================================================================
    const ASSISTANT_ID = 'ASSISTANT_ID_PLACEHOLDER';
    const API_KEY = 'API_KEY_PLACEHOLDER'; 
    
    const chatbotForm = document.getElementById('chatbot-form');
    const chatbotInput = document.getElementById('chatbot-input');
    const chatbotBody = document.getElementById('chatbot-body');
    const chatbotMessages = document.getElementById('chatbot-messages');
    const chatbotIntro = document.getElementById('chatbot-intro');
    const starterBtns = document.querySelectorAll('.starter-btn');
    const sendBtn = document.getElementById('chatbot-send-btn');
    
    let threadId = null;

    async function initializeChat() {
        if (!API_KEY.startsWith('sk-') || !ASSISTANT_ID.startsWith('asst_')) {
            console.warn("Chatbot Demo Mode: API Key or Assistant ID is missing.");
            return; // Run in demo mode
        }
        try {
            const response = await fetch('https://api.openai.com/v1/threads', {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${API_KEY}`,
                    'OpenAI-Beta': 'assistants=v2'
                }
            });
            const data = await response.json();
            threadId = data.id;
        } catch (error) {
            console.error('Error creating thread:', error);
            addMessage("Error initializing the chat. Please try again later.", "bot");
        }
    }

    const startConversation = () => {
        if (!chatbotIntro.classList.contains('hidden')) {
            chatbotIntro.classList.add('hidden');
            chatbotMessages.classList.add('active');
        }
    };

    const handleSendMessage = async (messageText) => {
        if (messageText.trim() === '') return;
        
        startConversation();
        addMessage(messageText, 'user');
        chatbotInput.value = '';
        sendBtn.disabled = true;
        sendBtn.classList.add('loading');
        addTypingIndicator();

        // Handle Demo Mode
        if (!API_KEY.startsWith('sk-') || !ASSISTANT_ID.startsWith('asst_')) {
            setTimeout(() => {
                removeTypingIndicator();
                addMessage("This is a demo. The site owner needs to add an API key for me to become fully functional.", "bot");
                sendBtn.disabled = false;
                sendBtn.classList.remove('loading');
            }, 1500);
            return;
        }
        
        // Handle Live Mode
        try {
            await fetch(`https://api.openai.com/v1/threads/${threadId}/messages`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${API_KEY}`, 'OpenAI-Beta': 'assistants=v2' },
                body: JSON.stringify({ role: 'user', content: messageText })
            });

            const runResponse = await fetch(`https://api.openai.com/v1/threads/${threadId}/runs`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${API_KEY}`, 'OpenAI-Beta': 'assistants=v2' },
                body: JSON.stringify({ assistant_id: ASSISTANT_ID })
            });
            let run = await runResponse.json();

            while (run.status === 'queued' || run.status === 'in_progress') {
                await new Promise(resolve => setTimeout(resolve, 500));
                const runStatusResponse = await fetch(`https://api.openai.com/v1/threads/${threadId}/runs/${run.id}`, {
                    headers: { 'Authorization': `Bearer ${API_KEY}`, 'OpenAI-Beta': 'assistants=v2' }
                });
                run = await runStatusResponse.json();
            }

            removeTypingIndicator();

            if (run.status === 'completed') {
                const messagesResponse = await fetch(`https://api.openai.com/v1/threads/${threadId}/messages`, {
                    headers: { 'Authorization': `Bearer ${API_KEY}`, 'OpenAI-Beta': 'assistants=v2' }
                });
                const messagesData = await messagesResponse.json();
                const botMessage = messagesData.data.find(m => m.run_id === run.id && m.role === 'assistant');
                if (botMessage && botMessage.content[0].type === 'text') {
                    // Clean the response text to remove unwanted citations
                    const cleanedText = botMessage.content[0].text.value.replace(/\u3010.*?\u3011/g, '').trim();
                    addMessage(cleanedText, 'bot');
                }
            } else {
                addMessage("I encountered an error. Please try again.", "bot");
            }
        } catch (error) {
            console.error('Error during chat:', error);
            removeTypingIndicator();
            addMessage("I'm having trouble connecting right now.", "bot");
        } finally {
            sendBtn.disabled = false;
            sendBtn.classList.remove('loading');
        }
    };
    
    chatbotForm.addEventListener('submit', (event) => {
        event.preventDefault();
        handleSendMessage(chatbotInput.value);
    });

    starterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            handleSendMessage(btn.dataset.question);
        });
    });

    function addMessage(text, sender) {
    const messageElement = document.createElement('div');
    messageElement.classList.add('chat-message', `${sender}-message`);

    // Convert markdown bold to HTML bold
    const formattedText = text.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');

    messageElement.innerHTML = formattedText; // Use innerHTML to render the HTML
    chatbotMessages.appendChild(messageElement);
    chatbotBody.scrollTop = chatbotBody.scrollHeight;
    }

    function addTypingIndicator() {
        const indicator = document.createElement('div');
        indicator.classList.add('chat-message', 'bot-message', 'typing-indicator');
        indicator.innerHTML = '<span></span><span></span><span></span>';
        chatbotMessages.appendChild(indicator);
        chatbotBody.scrollTop = chatbotBody.scrollHeight;
    }

    function removeTypingIndicator() {
        const indicator = document.querySelector('.typing-indicator');
        if (indicator) indicator.remove();
    }
    
    initializeChat();

    // ===================================================================
    // --- PORTFOLIO SCRIPTS ---
    // ===================================================================
    
    tsParticles.load("tsparticles",{fullScreen:{enable:!1},background:{color:"#ffffff00"},particles:{number:{value:50},color:{value:"#6a6a6a"},shape:{type:"circle"},opacity:{value:.5},size:{value:{min:1,max:5}},move:{enable:!0,speed:1.5,direction:"none",outModes:"bounce"},links:{enable:!0,distance:150,color:"#6a6a6a",opacity:.3,width:1}},interactivity:{events:{onHover:{enable:!0,mode:"repulse"},onClick:{enable:!0,mode:"push"}},modes:{repulse:{distance:100},push:{quantity:4}}}});

    const company="Skyworks Solutions",typeElem=document.getElementById("typewriter-company");let letterIndex=0,typing=!0;function typeCompanyLoop(){if(!typeElem)return;typing?letterIndex<=company.length?(typeElem.innerHTML=`<span class="company-color">${company.slice(0,letterIndex++)}</span>`,setTimeout(typeCompanyLoop,90)):(typing=!1,setTimeout(typeCompanyLoop,1200)):letterIndex>0?(typeElem.innerHTML=`<span class="company-color">${company.slice(0,--letterIndex)}</span>`,setTimeout(typeCompanyLoop,40)):(typing=!0,setTimeout(typeCompanyLoop,500))}typeCompanyLoop();

    const pythonSkillTrigger=document.getElementById("python-skill-trigger"),pythonPackages=document.getElementById("python-packages-category");pythonSkillTrigger&&pythonSkillTrigger.addEventListener("click",()=>{pythonPackages.classList.toggle("visible"),pythonSkillTrigger.classList.toggle("expanded")});

    const educationItems = document.querySelectorAll('.education-item');
    const sliderNodes = document.querySelectorAll('.slider-node');
    if (educationItems.length > 0 && sliderNodes.length > 0) {
    const eduObserver = new IntersectionObserver(entries => {
    entries.forEach(entry => {
    if (entry.isIntersecting) {
    const id = entry.target.id;
    educationItems.forEach(item => item.classList.remove('active'));
    sliderNodes.forEach(node => node.classList.remove('active'));
    entry.target.classList.add('active');
    const activeNode = document.querySelector(`.slider-node[data-target="${id}"]`);
    if (activeNode) activeNode.classList.add('active');
    }
    });
    }, { rootMargin: "-40% 0px -40% 0px" });
    educationItems.forEach(item => eduObserver.observe(item));
    }

    const menuToggle = document.querySelector('.menu-toggle');
    const navLinks = document.querySelector('.nav-links');
    const navLinkItems = document.querySelectorAll('.nav-links a');
    const closeMenu = () => navLinks.classList.remove('active');
    menuToggle.addEventListener('click', () => navLinks.classList.toggle('active'));
    navLinkItems.forEach(link => link.addEventListener('click', closeMenu));
    document.addEventListener('click', (event) => {
    const isClickInsideNav = navLinks.contains(event.target);
    const isClickOnToggle = menuToggle.contains(event.target);
    if (navLinks.classList.contains('active') && !isClickInsideNav && !isClickOnToggle) {
    closeMenu();
    }
    });

    const sections = document.querySelectorAll('section[id]');
    const navLinksForScroll = document.querySelectorAll('.nav-links a');
    if (sections.length > 0 && navLinksForScroll.length > 0) {
    const scrollObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
    if (entry.isIntersecting) {
    const id = entry.target.getAttribute('id');
    navLinksForScroll.forEach(link => {
    link.classList.remove('nav-link-active');
    if (link.getAttribute('href') === `#${id}`) {
    link.classList.add('nav-link-active');
    }
    });
    }
    });
    }, { rootMargin: '-20% 0px -65% 0px' });
    sections.forEach(section => scrollObserver.observe(section));
    }

    const publicationItems = document.querySelectorAll('.publication-item');
    publicationItems.forEach(item => {
    item.addEventListener('click', (event) => {
    if (event.target.closest('.publication-actions')) return;
    const details = item.querySelector('.publication-details');
    const wasActive = item.classList.contains('active');
    publicationItems.forEach(i => {
    i.classList.remove('active');
    i.querySelector('.publication-details').classList.remove('visible');
    });
    if (!wasActive) {
    item.classList.add('active');
    details.classList.add('visible');
    }
    });
    });

    const copyButtons = document.querySelectorAll('.copy-btn');
    copyButtons.forEach(button => {
    button.addEventListener('click', (event) => {
    event.stopPropagation();
    const citationText = button.dataset.citation;
    navigator.clipboard.writeText(citationText).then(() => {
    const originalText = button.textContent;
    button.textContent = 'Copied!';
    setTimeout(() => { button.textContent = originalText; }, 2000);
    }).catch(err => console.error('Failed to copy: ', err));
    });
    });
});
</script>
